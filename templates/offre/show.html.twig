{% extends 'offre/index.html.twig' %}
{% block div %}
    <h3>La liste des Offres de Stages</h3>
{% endblock %}
{% block body %}
{% block first_content %}

    <div align="center" style="margin-top: 20px;">
        <style>
            table {
                border-collapse: collapse;
                width: 80%;
            }

            th, td {
                border: 1px solid #ddd;
                padding: 8px;
                text-align: left;
            }
        </style>
        <table align="center">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Type de Stage</th>
                    <th>Secteurs</th>
                    <th>Fonction</th>
                    <th>Date d'Inscription</th>
                              <th>Image</th>

                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for offre in offres %}
                    <tr>
                        <td>{{ offre.titre }}</td>
                        <td>{{ offre.descreption }}</td>
                        <td>{{ offre.typeStage }}</td>

                        <td>{{ offre.secteurs }}</td>
                        <td>{{ offre.fonction }}</td>
                        <td>{{ offre.dateInscription ? offre.dateInscription|date('Y-m-d') : '' }}</td>
                        <td>            <img src="{{ asset(offre.image) }}" class="custom-block-image img-fluid" alt="">
</td>

                        <td>
                            <a href="{{ path('edit_offre', { id: offre.id }) }}">edit</a>
                               <a href="{{ path('offre_delete', { id: offre.id }) }}">delete</a>
                            <a href="{{ path('offre_details', { id: offre.id }) }}">Show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">Aucune offre trouv√©e.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}


    {% endblock %}


