{% extends 'offre/index.html.twig' %}
{% block body %}

<!DOCTYPE html>
<html lang="fr">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="ons/fonts/icomoon/style.css">

    <link href='ons/fullcalendar/packages/core/main.css' rel='stylesheet' />
    <link href='ons/fullcalendar/packages/interaction/main.css' rel='stylesheet' />
    <link href='ons/fullcalendar/packages/daygrid/main.css' rel='stylesheet' />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="ons/css/bootstrap.min.css">

    <!-- Style -->
    <link rel="stylesheet" href="ons/css/style.css">

    <title>Calendrier #9</title>
</head>
<body>

<div class="content">
    <div id='calendar'></div>
</div>



<script src="ons/js/jquery-3.3.1.min.js"></script>
<script src="ons/js/popper.min.js"></script>
<script src="ons/js/bootstrap.min.js"></script>

<script src='ons/fullcalendar/packages/core/main.js'></script>
<script src='ons/fullcalendar/packages/interaction/main.js'></script>
<script src='ons/fullcalendar/packages/daygrid/main.js'></script>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');

        var calendar = new FullCalendar.Calendar(calendarEl, {
            plugins: [ 'interaction', 'dayGrid' ],
            defaultDate: '2020-02-12',
            editable: true,
            eventLimit: true, // allow "more" link when too many events,
            selectable: true, // enable user to select dates
            events: {{ data|raw }},
              dateClick: function(info) {
                var dateStr = info.dateStr;
                $('#eventDate').val(dateStr); // Set the selected date in the form
                $('#eventModal').modal('show'); // Show the modal
            }
           
        });


        calendar.render();
    });
</script>

<script src="ons/js/main.js"></script>
</body>
</html>
{% endblock %}
