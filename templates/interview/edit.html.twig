{% extends 'offre/index.html.twig' %}
{% block div %}
    <h3>Edit  interview</h3>
{% endblock %}
{% block body %}
<section class="section-padding section-bg">
    <div class="container">
        <form method="post" action="{{ path('add_interiew') }}" enctype="multipart/form-data">
            {{ form_start(form) }}
            <div class="row">
 

         <div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
    {{ form_widget(form.etudiant_id, {'attr': {'class': 'form-control', 'placeholder': 'Fonction', 'required': 'required'}}) }}
    <label for="{{ form.etudiant_id.vars.id }}">Candidature</label>
    {{ form_errors(form.etudiant_id) }}
</div>      

    <div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
    {{ form_widget(form.heure, {'attr': {'class': 'form-control', 'placeholder': 'Fonction', 'required': 'required'}}) }}
    <label for="{{ form.heure.vars.id }}">heure</label>
    {{ form_errors(form.heure) }}
</div>

<div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
    {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker', 'placeholder': 'Date ', 'required': 'required'}}) }}
    <label for="{{ form.date.vars.id }}">Date de l'interview</label>
    {{ form_errors(form.date) }}
</div>



              

                <div class="col-lg-12 col-md-12 col-12">
                    <button type="submit" class="btn btn-primary">edit Interview</button>
                </div>
            </div>
            {{ form_end(form) }}
            
        </form>
    </div>
</section>
{% endblock %}
