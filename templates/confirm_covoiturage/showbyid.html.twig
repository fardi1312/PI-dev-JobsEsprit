{% block div %}
<h3>>Confirmation Details </h3>
{% endblock %}


{% block body %}

    <dl>
        <dt>Username Etudiant:</dt>
        <dd>{{ confirm_covoiturage.usernameEtud }}</dd>

        <dt>First Name Etudiant:</dt>
        <dd>{{ confirm_covoiturage.firstNameEtud }}</dd>

        <dt>Last Name Etudiant:</dt>
        <dd>{{ confirm_covoiturage.lastNameEtud }}</dd>

        <dt>Phone Etudiant:</dt>
        <dd>{{ confirm_covoiturage.phoneEtud }}</dd>

        <dt>Email Etudiant:</dt>
        <dd>{{ confirm_covoiturage.emailEtud }}</dd>

        <dt>Number of Places Reserved:</dt>
        <dd>{{ confirm_covoiturage.nombrePlacesReserve }}</dd>

        <dt>Total Price for Reserved Places:</dt>
