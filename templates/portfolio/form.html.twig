{% extends 'portfolio/index.html.twig' %}
{% block div %}
    <h3>Ajouter portfolios</h3>
{% endblock %}
{% block body %}
<section class="section-padding section-bg">
    <div class="container">
        <form method="post" action="{{ path('app_form') }}" enctype="multipart/form-data">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
                    {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'titre', 'required': 'required'}}) }}
                    <label for="{{ form.titre.vars.id }}">Titre</label>
                    {{ form_errors(form.titre) }}
                </div>
              

                <div class="col-lg-12 col-12 mb-3 form-floating">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'description', 'required': 'required'}}) }}
                    <label for="{{ form.description.vars.id }}">Description</label>
                    {{ form_errors(form.description) }}
                </div>


<div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
    {{ form_widget(form.secteur, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
    <label for="{{ form.secteur.vars.id }}">Secteur</label>
    {{ form_errors(form.secteur) }}
</div>
<div class="col-lg-6 col-md-6 col-12 mb-3 form-floating">
    {{ form_widget(form.date, {'attr': {'class': 'form-control datepicker', 'placeholder': 'Date ', 'required': 'required'}}) }}
    <label for="{{ form.date.vars.id }}">Date </label>
    {{ form_errors(form.date) }}
</div>

               <div >
                    {{ form_widget(form.image, {'attr': {'class': 'form-control', 'placeholder': 'image', 'required': 'required'}}) }}
                   {# Display existing image if available #}
    {% if form.vars.value.image %}
                        <img src="{{ asset('/' ~ portfolio.image) }}" " style="max-width: 100%; height: auto;">
    {% endif %}
                    {{ form_errors(form.image) }}
                </div> 




              

                <div class="col-lg-12 col-md-12 col-12">
                    <button type="submit" class="btn btn-primary">Add Porfolio</button>
                </div>
            </div>
            {{ form_end(form) }}
            
        </form>
    </div>
</section>
{% endblock %}
